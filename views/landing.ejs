        <script>
            // Prepare products for filtering
            const allProducts = <%- JSON.stringify(products.map(product => ({
                id: product._id,
                name: product.name,
                make: product.make,
                mainImage: '../' + (product.mainImage || 'https://i.ibb.co/kSZwvxX/addLogo.png'),
                model: product.model || '',
                offer: product.offer,
                estimateWeekly: Math.round(product.offer / 52)
            }))) %>;
    
            function filterCars(make) {
                // Remove active class from all buttons
                document.querySelectorAll('.filter-button').forEach(btn => {
                    btn.classList.remove('active');
                    btn.style.backgroundColor = '';
                    btn.style.color = '';
                });
    
                // Add active class and highlight to clicked button
                const activeButton = Array.from(document.querySelectorAll('.filter-button'))
                    .find(btn => btn.textContent.trim().includes(make));
                
                if (activeButton) {
                    activeButton.classList.add('active');
                    activeButton.style.backgroundColor = '#6200ee';
                    activeButton.style.color = 'white';
                }
    
                // Clear current carousel
                const carousel = document.getElementById('carouselContainer1');
                carousel.innerHTML = ''; // Clear existing products
    
                // Filter products
                const filteredProducts = make === 'All' 
                    ? allProducts 
                    : allProducts.filter(product => product.make === make);
    
                // Render filtered products
                if (filteredProducts.length > 0) {
                    filteredProducts.forEach(product => {
                        const productCard = createProductCard(product);
                        carousel.appendChild(productCard);
                    });
                } else {
                    // No products found for this manufacturer
                    const noProductsMessage = document.createElement('div');
                    noProductsMessage.className = 'text-center text-gray-500 p-4 w-full';
                    noProductsMessage.textContent = `No cars found for ${make}`;
                    carousel.appendChild(noProductsMessage);
                }
    
                // Reset carousel position
                carousel.style.transform = 'translateX(0)';
                carousel.setAttribute('data-pos', '0');
            }
    
            function createProductCard(product) {
                const cardDiv = document.createElement('div');
                cardDiv.className = 'car-card';
                cardDiv.dataset.make = product.make;
    
                cardDiv.innerHTML = `
                    <a href="/product/${product.id}" class="h-64 overflow-hidden">
                        <img src="${product.mainImage}" alt="${product.name}">
                    </a>
                    
                    <div class="car-details">
                        <h2>${product.name}</h2>
                        <div class="car-heart" onclick="toggleFavorite(this)">&#10084;</div>
                        <p>${product.make} | ${product.model}</p>
                        <p class="car-price">$${product.offer}</p>
                        <p class="car-estimate">est. $${product.estimateWeekly}/wk based on 10.02% p.a.</p>
                    </div>
                `;
    
                return cardDiv;
            }
    
            // Carousel navigation function
            function shiftCarousel(direction, containerId) {
                const container = document.getElementById(containerId);
                const cards = container.querySelectorAll('.car-card');
                
                if (cards.length === 0) return;
    
                const cardWidth = cards[0].offsetWidth;
                let currentPos = parseInt(container.getAttribute('data-pos') || 0);
    
                // Calculate new position
                currentPos = Math.max(0, Math.min(currentPos + direction, cards.length - 1));
    
                // Move carousel
                container.style.transform = `translateX(-${currentPos * cardWidth}px)`;
                container.setAttribute('data-pos', currentPos);
            }
    
            // Favorite toggle function
            function toggleFavorite(element) {
                element.classList.toggle('liked');
            }
    
            // Initialize first view
            document.addEventListener('DOMContentLoaded', () => {
                filterCars('All');
            });
        </script>
