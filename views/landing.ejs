        .car-listing {
            width: 100%;
            margin: 0 auto;
            padding: 20px 0;
            text-align: center;
        }
        .car-listing h1 {
            font-size: 24px;
            color: #2b2b2b;
            margin-bottom: 20px;
        }
        .car-slider {
            position: relative;
            overflow: hidden;
            width: 100%;
            box-sizing: border-box;
            margin-bottom: 30px;
        }
        .car-carousel {
            display: flex;
            transition: transform .5s ease;
        }
        .car-card {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, .1);
            overflow: hidden;
            flex-shrink: 0;
            margin: 0 10px;
            width: calc(25% - 20px);
        }
        .car-card img {
            width: 100%;
            height: auto;
        }
        .car-details {
            padding: 10px 15px;
            text-align: left;
        }
        .car-details h2 {
            font-size: 15px;
            color: #2b2b2b;
            margin: 0;
            display: inline-block;
        }
        .car-heart {
            font-size: 20px;
            color: #ccc;
            cursor: pointer;
            transition: color .3s ease;
            display: inline-block;
            margin-left: 10px;
            vertical-align: middle;
        }
        .car-heart.liked {
            color: #ff4757;
        }
        .car-details p {
            font-size: 14px;
            color: #777;
            margin: 5px 0;
        }
        .car-details .car-price {
            font-size: 20px;
            color: #2b2b2b;
            font-weight: bold;
            margin-top: 10px;
        }
        .car-details .car-estimate {
            font-size: 12px;
            color: #999;
            margin-top: 5px;
        }
        .car-explore-button {
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 16px;
            background-color: #5428fd;
            color: #fff;
            border: none;
            border-radius: 25px;
            cursor: pointer;
            transition: background-color .3s ease;
        }
        .car-explore-button:hover {
            background-color: #3a1cbe;
        }
        .car-nav-btn {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background-color: rgba(0, 0, 0, .5);
            color: #fff;
            border: none;
            border-radius: 50%;
            padding: 10px;
            cursor: pointer;
            z-index: 10;
            font-size: 20px;
            width: 40px;
            height: 40px;
        }
        .car-nav-btn.left {
            left: 10px;
        }
        .car-nav-btn.right {
            right: 10px;
        }
